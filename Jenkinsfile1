pipeline {
  agent any
   stages {
   stage('build'){
   steps{
      sh 'sudo docker build . '
   }
   }
      stage('Test') {
              steps {
                 
                     sh 'sudo docker run -it  Dockerfile'
                    echo "docker image tested"
                    }
           }
          stage('Deploy') {
              steps {
              sh 'sudo docker run -it  Dockerfile'
                    sh 'sudo docker push naveenkumaraluthuri Dockerfile'
                  }
            }
  }
 }
